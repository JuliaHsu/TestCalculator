<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.julia.testcalculator.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView android:text="@string/result" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtResult"
            android:text="0"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:background="#CCCCCC"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="354dp"
        android:layout_height="400dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/gray"
        android:layout_weight="0.31">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="C"
                android:textSize="50dp"
                android:id="@+id/btn_clear"
                android:layout_column="5"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:id="@+id/btn_addSub"
                android:layout_column="8"
                android:text="+-"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="%"
                android:textSize="50dp"
                android:id="@+id/btn_percent"
                android:layout_column="20"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="+"
                android:textSize="50dp"
                android:id="@+id/btn_add"
                android:layout_column="21"
                android:onClick="onClickButton"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="7"
                android:textSize="50dp"
                android:id="@+id/btn_7"
                android:layout_column="5"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="8"
                android:textSize="50dp"
                android:id="@+id/btn_8"
                android:layout_column="8"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="9"
                android:textSize="50dp"
                android:id="@+id/btn_9"
                android:layout_column="20"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="-"
                android:textSize="50dp"
                android:id="@+id/btn_sub"
                android:layout_column="21"
                android:onClick="onClickButton"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="4"
                android:textSize="50dp"
                android:id="@+id/btn_4"
                android:layout_column="5"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="5"
                android:textSize="50dp"
                android:id="@+id/btn_5"
                android:layout_column="8"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="6"
                android:textSize="50dp"
                android:id="@+id/btn_6"
                android:layout_column="20"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="*"
                android:textSize="50dp"
                android:id="@+id/btn_times"
                android:layout_column="21"
                android:onClick="onClickButton"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="50dp"
                android:id="@+id/btn_1"
                android:layout_column="5"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="2"
                android:textSize="50dp"
                android:id="@+id/btn_2"
                android:layout_column="8"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="3"
                android:textSize="50dp"
                android:id="@+id/btn_3"
                android:layout_column="20"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="/"
                android:textSize="50dp"
                android:id="@+id/btn_devide"
                android:layout_column="21"
                android:onClick="onClickButton"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="0"
                android:textSize="50dp"
                android:id="@+id/btn_0"
                android:layout_column="5"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="."
                android:textSize="50dp"
                android:id="@+id/btn_point"
                android:layout_column="8"
                android:onClick="onClickButton"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="="
                android:textSize="50dp"
                android:id="@+id/btn_equal"
                android:layout_column="20"
                android:onClick="onClickButton"/>

        </TableRow>

    </TableLayout>


</LinearLayout>
